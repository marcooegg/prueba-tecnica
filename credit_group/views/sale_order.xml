<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <!-- <attribute name="attrs">{
                    "decoration-success" : "credit == 'available_credit'",
                    "decoration-danger":"credit == 'credit_blocked'",
                    "decoration-muted":"credit == 'no_limit'" 
                }
                </attribute> -->
                <attribute name="decoration-success">credit == 'available_credit'</attribute>
                <attribute name="decoration-danger">credit == 'credit_blocked'</attribute>
                <attribute name="decoration-muted">credit == 'no_limit'</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="credit"/>
            </xpath>
        </field>
    </record>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_channel_id']" position="after">
                <field name="credit" 
                decoration-success = "credit == 'available_credit'" decoration-danger="credit == 'credit_blocked'" decoration-muted="credit == 'no_limit'" />
            </xpath>
        </field>
    </record>
</odoo>