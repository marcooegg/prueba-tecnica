<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="credit_group_view_form" model="ir.ui.view">
        <field name="name">credit.group.view.form</field>
        <field name="model">credit.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group name="group_col1">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sale_channel_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="group_col2">
                            <field name="global_credit"/>
                            <field name="used_credit"/>
                            <field name="available_credit"/>
                        </group>
                        <field name="partner_ids" widget="many2many_tags" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="credit_group_view_tree" model="ir.ui.view">
        <field name="name">credit.group.view.tree</field>
        <field name="model">credit.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="sale_channel_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <!-- <field name="currency_id" invisible="1"/> -->
                <field name="global_credit"/>
                <!-- having these fields show in tree view may be bad performant -->
                <!-- <field name="used_credit"/> -->
                <!-- <field name="available_credit"/> -->
            </tree>
        </field>
    </record>

    <record id="credit_group_view_search" model="ir.ui.view">
        <field name="name">credit.group.view.search</field>
        <field name="model">credit.group</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|',('name','ilike',self),('code','ilike,self)]"/>
            </search>
        </field>
    </record>

    <record id="credit_group_view_action" model="ir.actions.act_window">
        <field name="name">Credit Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">credit.group</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="credit_group_menu_act" name="Credit Group" parent="sale.menu_sale_config" action="credit_group_view_action" sequence="51"/>
</odoo>