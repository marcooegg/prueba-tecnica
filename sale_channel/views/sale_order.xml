<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="sale_channel_id" optional="show"/>
            </xpath>
        </field>
    </record>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sale_channel_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_search" model="ir.ui.view">
        <field name="name">sale.order.inherit.view.search</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sale_channel_id"/>
            </xpath>
            <xpath expr="//group[last()]" position="inside">
                <filter name="sale_channel_id" string="Channel" context="{'group_by':'sale_channel_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>