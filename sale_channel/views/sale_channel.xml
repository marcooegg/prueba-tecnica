<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sale_channel_view_form" model="ir.ui.view">
        <field name="name">sale.channel.view.form</field>
        <field name="model">sale.channel</field>
        <field name="arch" type="xml">
            <form string="Sale Channel">
                <header>
                </header>
                <sheet>
                    <group>
                        <group name="group_col_1">
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group name="group_col_2">
                            <field name="warehouse_id"/>
                            <field name="journal_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_channel_view_tree" model="ir.ui.view">
        <field name="name">sale.channel.view.tree</field>
        <field name="model">sale.channel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="warehouse_id"/>
                <field name="journal_id"/>
            </tree>
        </field>
    </record>

    <record id="sale_channel_view_search" model="ir.ui.view">
        <field name="name">sale.channel.view.search</field>
        <field name="model">sale.channel</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="['|',('name','ilike',self),('code','ilike,self)]"/>
            </search>
        </field>
    </record>

    <record id="sale_channel_view_action" model="ir.actions.act_window">
        <field name="name">Sale Channels</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.channel</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="sale_channel_menu_act" name="Sale Channels" parent="sale.menu_sale_config" action="sale_channel_view_action" sequence="50"/>
</odoo>